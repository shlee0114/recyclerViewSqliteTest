<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/fir"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#2F111111"
        />
    
        <EditText
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:id="@+id/mainText"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            />
        <RadioGroup
            android:layout_width="220dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/mainText"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:id="@+id/radioGrp"
            >
            <RadioButton
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:text="test"
                android:id="@+id/test1"
                />
            <RadioButton
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:text="test2"
                android:id="@+id/test2"
                />
            <RadioButton
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:text="test3"
                android:id="@+id/test3"
                />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fir"
        android:id="@+id/snd"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageViewSnd"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#2F111111"
            />

        <EditText
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:id="@+id/mainTextSnd"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageViewSnd"
            />
        <RadioGroup
            android:layout_width="220dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/mainTextSnd"
            app:layout_constraintLeft_toRightOf="@id/imageViewSnd"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:text="test"
                android:id="@+id/test1_1"
                />
            <RadioButton
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:text="test2"
                android:id="@+id/test1_2"
                />
            <RadioButton
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:text="test3"
                android:id="@+id/test1_3"
                />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/snd"
        android:id="@+id/thr"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageViewThr"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#2F111111"
            />

        <EditText
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:id="@+id/mainTextThr"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageViewThr"
            />
        <RadioGroup
            android:layout_width="220dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/mainTextThr"
            app:layout_constraintLeft_toRightOf="@id/imageViewThr"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="test"
                android:id="@+id/test2_1"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="test2"
                android:id="@+id/test2_2"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="test3"
                android:id="@+id/test2_3"
                />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/exit"
        android:text="취소"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/save"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/save"
        android:text="저장"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/exit"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>